extends ./layout.pug

block styles
  title Login

block navcontent
  a.nav-item.nav-link(href='/') IT Event List
  a.nav-item.nav-link(href='/newevent') New IT Event
block register
  a.nav-item.nav-link(href='/register') Register
  a.nav-item.nav-link.active(href='/login') Login

block content
  br
  br
  br

  form.container(action='addevent' method='POST' enctype='application/x-www-form-urlencoded')
    .form-row
      .col-md-4.mb-3
      .col-md-1.mb-3
        | User Name:
      .col-md-3.mb-3
        input#username.form-control(type='text' name='username' pattern='^[a-zA-Z0-9/*@]*$' placeholder='user name' required='')
      .col-md-4.mb-3
    .form-row
      .col-md-3.mb-3  
    .form-row
      .col-md-4.mb-3    
      .col-md-1.mb-3
        | Password:
      .col-md-3.mb-3
        input#password.form-control(type='text' name='password' pattern='^[a-zA-Z0-9]*$' minlength='8' placeholder='password' required='')
      .col-md-4.mb-3    
    .form-row
      .col-md-3.mb-3    
    .form-row
      .col-md-4.mb-3    
      .col-md-1.mb-3
      .col-md-3.mb-3
        button.btn.btn-primary(type='submit') Login
      .col-md-4.mb-3
