extends ./layout.pug

block styles
  title Register

block navcontent
  a.nav-item.nav-link(href='/') IT Event List
  a.nav-item.nav-link(href='/newevent') New IT Event
block register
  a.nav-item.nav-link.active(href='/register') Register
  a.nav-item.nav-link(href='/login') Login

block content
  br
  br
  br

  form.container(action='newuser' method='POST' enctype='application/x-www-form-urlencoded')
    .form-row
      .col-md-3.mb-3
      .col-md-1.mb-3
        | User Name:
      .col-md-4.mb-3
        input#username.form-control(type='text' name='username' onblur='checkUserName()' pattern='^[a-zA-Z0-9/*@]*$' placeholder='user name' required='')
        | letter or number or / * @
      .col-md-1.mb-3
        | * 
      .col-md-3.mb-3
        #usernameresult
    .form-row
      .col-md-3.mb-3
    .form-row
      .col-md-3.mb-3    
      .col-md-1.mb-3
        | Email:
      .col-md-4.mb-3
        input#email.form-control(type='text' name='email' onblur='checkEmail()' placeholder='email' required='')
      .col-md-1.mb-3
        | * 
      .col-md-3.mb-3
        #emailresult 
    .form-row
      .col-md-3.mb-3       
    .form-row
      .col-md-3.mb-3    
      .col-md-1.mb-3
        | Password:
      .col-md-4.mb-3
        input#password.form-control(type='password' name='password' onblur='encrpPW()' pattern='^[a-zA-Z0-9]*$' minlength='8' placeholder='password' required='')
        | at least eight characters including one letter and one number
      .col-md-1.mb-3
        |* 
      .col-md-3.mb-3
        #pwalert
        input#pwresult.form-control(type='text' name='pwresult' hidden)    
    .form-row
      .col-md-3.mb-3    
    .form-row
      .col-md-3.mb-3    
      .col-md-1.mb-3
      .col-md-3.mb-3
        button.btn.btn-primary(type='submit') Register
      .col-md-1.mb-3
      .col-md-3.mb-3
